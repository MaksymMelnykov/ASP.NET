@using Lab12.Models
@model List<Company>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Companies DB</title>
</head>
<style>
    body{
        margin: 0;
        padding: 0;
        height: 100vh;
        font-family: Arial, sans-serif;
        background-color: lightgrey;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .container {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        max-width: 800px;
        padding: 20px;
        border: 2px solid #1c1c1c;
        border-radius: 25px;
        box-shadow: 0 0 15px 5px grey;
        background-color: white;
    }

    h1, h2 {
        color: #333;
        text-align: center;
    }

    ol {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    li {
        margin-bottom: 15px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
        text-align: center;
    }
</style>
<body>
    <div class="container">
        <h1>An example of working with a database</h1>
        <h2>Companies</h2>

        <ol>
            @foreach (var company in Model)
            {
                <li>Id: @company.Id, company name: @company.CompanyName, number of employees: @company.NumberOfEmployees and foundation year: @company.FoundationYear</li>
            }
        </ol>
    </div>
</body>
</html>